<% if @book.errors.any? %>
 <div class="alert">
    <% @book.errors.full_messages.each do |message| %>
    <span><% message %></span>
  <% end %>
</div>
<% end %>


<h1>New Post</h1>

<%= form_for(@book) do |f| %>

  <div class="field">
     <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %>
    <%= f.text_area :opinion %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>